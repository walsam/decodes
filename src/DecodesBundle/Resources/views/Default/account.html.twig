{% extends 'base.html.twig' %}

{% block title %}Votre Compte{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/bootstrap4/bootstrap.min.css') }}">
    <link href="{{ asset('plugins/font-awesome-4.7.0/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.carousel.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/owl.theme.default.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/OwlCarousel2-2.2.1/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('plugins/jquery-ui-1.12.1.custom/jquery-ui.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_styles.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_responsive.css') }}">
    <style>
        input{
            border: #fe4c5063;
            border-style: solid;
            border-width: 1px;
            border-radius: 15px;
            width: 50%;
            margin-left: 10%;
            background: #FFFFFF;
            padding-left: 25px;
            float: left;
        }
        textarea{
            border: #fe4c5063;
            border-style: solid;
            border-width: 1px;
            width: 50%;
            padding-left: 25px;
            margin-left: 10%;
            border-radius: 15px;
            float: left;
        }
        label{
            background: #FFFFFF;
            border: none;
            float: right;
        }

    </style>
{% endblock %}
{% block slider %}{% endblock %}
{% block banner %}{% endblock %}


{% block body %}
    <div class="container product_section_container" style="padding-top: 20px">
        {% if app.user.id == client.id %}
            <div class="text-center">
                {{ form_start(edit_form) }}
                    <table width="100%">
                        <tr>
                            <td rowspan="11" width="25%"><img src="{{ asset('images/userlogo.png') }}"></td>
                            <td width="10%">
                                {{ form_label(edit_form.firstname, 'prenom :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.firstname) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.lastname, 'nom :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.lastname) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.email, 'email :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.email) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.telephone, 'Telephone :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.telephone) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.username, 'username :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.username) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.password, 'password :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.password) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.address, 'adresse :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.address) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.city, 'ville :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.city) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.zipcode, 'CP :') }}

                            </td>
                            <td>
                                {{ form_widget(edit_form.zipcode) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {{ form_label(edit_form.creditcard, 'carte de credit :') }}
                            </td>
                            <td>
                                {{ form_widget(edit_form.creditcard) }}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="{{ path('ShowCart') }}" class="newsletter_submit_btn trans_300" style="float: right; margin-top: 10px; padding-top: 13px;">Panier</a>
                            </td>
                            <td>
                                <button type="submit" class="newsletter_submit_btn trans_300" style="float: left; margin-left: 10%; margin-top: 10px;">Modifier</button>
                            </td>
                        </tr>
                    </table>

                {{ form_end(edit_form) }}
            </div>
        {% else %}
            <h1>you are not allowed here !!</h1>
            <script>
                var timer = setTimeout(function() {
                    window.location='{{ path('logout') }}'
                }, 1000);
            </script>
        {% endif %}
    </div>
{% endblock %}
{% block script %}
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('styles/bootstrap4/popper.js') }}"></script>
    <script src="{{ asset('styles/bootstrap4/bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/Isotope/isotope.pkgd.min.js') }}"></script>
    <script src="{{ asset('plugins/OwlCarousel2-2.2.1/owl.carousel.js') }}"></script>
    <script src="{{ asset('plugins/easing/easing.js') }}"></script>
    <script src="{{ asset('plugins/jquery-ui-1.12.1.custom/jquery-ui.js') }}"></script>
    <script src="{{ asset('js/categories_custom.js') }}"></script>
{% endblock %}