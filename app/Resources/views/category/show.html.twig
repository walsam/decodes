                                            <div class="product discount product_filter">
                                                <a href="{{ path('product_show', {'id': product.id}) }}">
                                                    <div class="product_image">
                                                        <img style="width: inherit" src="{{ asset('uploads/brochures/' ~ product.picture) }}" alt="" >
                                                    </div>
